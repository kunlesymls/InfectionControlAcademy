@model Academy.Models.Training.SessionSpeaker

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>SessionSpeaker</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SessionSpeakerId" />
            <div class="form-group">
                <label asp-for="TrainingSessionId" class="control-label"></label>
                <select asp-for="TrainingSessionId" class="form-control" asp-items="ViewBag.TrainingSessionId"></select>
                <span asp-validation-for="TrainingSessionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpeakerId" class="control-label"></label>
                <select asp-for="SpeakerId" class="form-control" asp-items="ViewBag.SpeakerId"></select>
                <span asp-validation-for="SpeakerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsLeadSpeaker" /> @Html.DisplayNameFor(model => model.IsLeadSpeaker)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

